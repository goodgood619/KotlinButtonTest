<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.kotlinbuttontest.MainActivity">

    <TextView
            android:id="@+id/text_kotlin"
            android:layout_width="388dp"
            android:layout_height="114dp"
            android:paddingLeft="160dp"
            android:paddingTop="120dp"
            android:text="버튼 클릭 전"
            app:layout_constraintTop_toTopOf="parent" tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="22dp"/>

    <ImageView
            android:layout_width="250dp"
            android:layout_height="350dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/imageView"

            app:layout_constraintHorizontal_bias="0.099" android:layout_marginBottom="64dp"/>
    <EditText
            android:id="@+id/et_kotlin"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginBottom="19dp"
            android:hint="텍스트를 입력하세요."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" tools:ignore="MissingConstraints"/>

    <Button
            android:id="@+id/btn_kotlin"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="468dp"
            android:text="POST"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.128"/>
    <Button
            android:id="@+id/btn_kotlin2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="468dp"
            android:text="GET"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.926"/>

    <Button
            android:id="@+id/chageImg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="change"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.948"
            android:layout_marginBottom="132dp"/>



    <Button android:id="@+id/download"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="download"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_kotlin"
            app:layout_constraintVertical_bias="0.388" app:layout_constraintHorizontal_bias="0.926"/>

    <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
               android:id="@+id/imageView"/>

</androidx.constraintlayout.widget.ConstraintLayout>